@import "~lost-grid/stylus/lost.styl"

height = 260px
width = 360px

.geoObjectsList
	align('right')
	width width
	top -139px
	position absolute
	height height
	z-index 100
	background-color rgba(255, 255, 255, 0.8)
	font-size 16px
	color #333333

	&__content
		width width
		height auto
		overflow hidden
		padding-bottom 35px

		&:before
			-moz-transition: all 0.2s ease;
			-o-transition: all 0.2s ease;
			-webkit-transition: all 0.2s ease;
			// background-color: #fff;
			// opacity: 0.8;
			content: " ";
			display: block;
			height: 100%;
			left: 0;
			position: absolute;
			top: 0;
			transition: all 0.2s ease;
			width: 100%;
			z-index: 0;

	& .gm-scrollbar-container
		height height
		opacity 1
		padding-bottom 30px
		padding-left 0
		padding-top 10px
		transition opacity 1s ease

	.gm-scrollbar.-vertical .thumb
		z-index 50

	& .gm-scroll-view
		box-sizing border-box
		height height + 10px !important
		opacity 1
		overflow scroll
		padding-bottom 10px
		padding-right 10px
		padding-top 0
		transition opacity 1s ease

		ul
			position relative
			z-index 100
			width 312px

			li
				padding-bottom 9px
				padding-right 30px

				&:nth-child(2n)
					background-color #e5e5e5

				a
					display block
					padding-left 24px
					color #000
				  font-family HeliosCondLightC
				  font-size 18px
				  letter-spacing normal
				  padding-top 6px
				  text-align left
				  text-align left
				  text-decoration none
