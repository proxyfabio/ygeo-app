.promo
	position absolute
	height 314px
	width 100%
	bottom 0
	left 0
	z-index 500
	-webkit-transition bottom .7s linear
	transition bottom .7s linear

	&.off
	& .off
		bottom -314px

	&__close
		position absolute
		top 0
		right 0
		z-index 500
		width 48px
		height 48px
		background url(../../images/cross.png) no-repeat
		cursor pointer

	& a img
		width 100%
		height 314px

	& a .promo__text
		position absolute
		top 0
		left 0
		width 50%
		height 100%
		color #fff
		z-index 600
		font-family 'HeliosCondC-Bold'

		&:after
			display block
			content " "
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			z-index 0
			background-color #000
			opacity .5

		& > p
			font-family 'HeliosCondC'
			font-size 24px
			padding 0 0 0 72px

		& *
			position relative
			z-index 10

		& h2
			font-size 70px
			font-weight normal
			line-height 40px
			padding 0 0 0 72px
			margin 50px 0
