.easterEgg
	position: absolute;
	z-index: 100000;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;

	&:after
		content: ' ';
		background: rgba(128, 128, 128, 0.65);
		width: inherit;
		height: inherit;
		display: block;

	&__close
		position: fixed;
		top: 0;
		right: 30px;
		z-index: 10;
