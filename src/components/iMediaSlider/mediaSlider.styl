@import "~lost-grid/stylus/lost.styl"

.slider
  // column('1/1')
  width 100%
  height inherit
  overflow hidden
  position relative

  .slider__wrapper
    height inherit

  .slider__item
    height inherit
    text-align center

  .slider__name
    position absolute
    top 0
    left 0
    width 100%
    color #fff
    font-family 'HeliosCondLightC'
    padding 10px 20px
    font-size 30px
    z-index 600

    &:before
      display block
      content " "
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index -1
      background-color #000
      opacity .5

  .slider__ruler
    cursor pointer
    position absolute
    top 50%
    margin-top -32px
    outline 0
    width 41px
    height 42px
    text-indent -9999px
    z-index 99
    opacity .8

  .slider__left
    left 60px
    background url(../../images/arrow_left.png) center center no-repeat

  .slider__right
    right 60px
    background url(../../images/arrow_right.png) center center no-repeat

  .slider__content
    margin 0 auto
    height inherit


.example-enter {
  opacity 0.01
  transition opacity .5s ease-in
}

.example-enter.example-enter-active {
  opacity 1
}

.example-leave {
  opacity 1
  transition opacity .5s ease-in
}

.example-leave.example-leave-active {
  opacity 0.01
}
