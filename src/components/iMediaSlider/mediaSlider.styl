@import "~lost-grid/stylus/lost.styl"

.slider
  // column('1/1')
  width 100%
  height 300px
  overflow hidden
  position relative

  .slider__item
    height inherit
    text-align center

  .slider__ruler
    cursor pointer
    position absolute
    top 50%

  .slider__left
    left 0

  .slider__right
    right 0

  .slider__content
    margin 0 auto
    height 300px


.example-enter {
  opacity: 0.01;
  transition: opacity .5s ease-in;
}

.example-enter.example-enter-active {
  opacity: 1;
}

.example-leave {
  opacity: 1;
  transition: opacity .5s ease-in;
}

.example-leave.example-leave-active {
  opacity: 0.01;
}
